@model IEnumerable<WebZootecPro.Data.CampaniaLechera>
@{
    ViewData["Title"] = "Campañas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Campañas</h2>
    <a class="btn btn-primary" asp-action="Create">Nueva campaña</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Establo</th>
            <th>Nombre</th>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Activa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Establo?.nombre</td>
                <td>@x.nombre</td>
                <td>@x.fechaInicio.ToString("dd/MM/yyyy")</td>
                <td>@x.fechaFin.ToString("dd/MM/yyyy")</td>
                <td>@(x.activa ? "Sí" : "No")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@x.Id">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
