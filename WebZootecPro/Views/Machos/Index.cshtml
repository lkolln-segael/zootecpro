@model IEnumerable<WebZootecPro.Data.Animal>

<h2>Lista de machos</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">+ Nuevo macho</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Código</th>
            <th>Nombre</th>
            <th>Arete</th>
            <th>Hato</th>
            <th style="width: 180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@(a.codigo ?? "-")</td>
                <td>@a.nombre</td>
                <td>@(a.arete ?? "-")</td>
                <td>@a.idHatoNavigation?.nombre</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@a.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
