@model WebZootecPro.ViewModels.Admin.EditDuenoEmpresaViewModel
@{
ViewData["Title"] = "Edit due침o + empresa";
}

<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Editar due침o de empresa</h5>
    <span class="text-muted small">Modo administraci칩n</span>
  </div>
  @if (!ViewData.ModelState.IsValid)
  {
  <div asp-validation-summary="All" class="alert alert-danger"></div>
  }

  <div class="card-body">
    @if (TempData["AdminMessage"] != null)
    {
    <div class="alert alert-success">
      @TempData["AdminMessage"]
    </div>
    }

    <form asp-action="EditDuenoEmpresa" method="post" novalidate>
      <h6 class="text-uppercase text-muted mb-2">Datos del due침o (usuario)</h6>
      <div class="row">
        <div class="col-md-6 mb-3">
          <label asp-for="UserName" class="form-label"></label>
          <input asp-for="UserName" class="form-control" autocomplete="username" />
          <span asp-validation-for="UserName" class="text-danger small"></span>
        </div>
        <div class="col-md-6 mb-3">
          <label asp-for="NombrePersona" class="form-label"></label>
          <input asp-for="NombrePersona" class="form-control" />
          <span asp-validation-for="NombrePersona" class="text-danger small"></span>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 mb-3">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="true" id="passwordCheckbox">
            <label class="form-check-label">
              Mantener contrasena
            </label>
          </div>
          <label asp-for="Password" class="form-label"></label>
          <input id="passwordInput" asp-for="Password" class="form-control" autocomplete="new-password" />
        </div>
        <div class="col-md-4 mb-3">
          <label asp-for="Dni" class="form-label"></label>
          <input asp-for="Dni" class="form-control" />
          <span asp-validation-for="Dni" class="text-danger small"></span>
        </div>
        <div class="row">
          <div class="col-md-4 mb-3">
            <label asp-for="Apellido" class="form-label"></label>
            <input asp-for="Apellido" class="form-control" />
          </div>
          <div class="col-md-4 mb-3">
            <label asp-for="Telefono" class="form-label"></label>
            <input asp-for="Telefono" class="form-control" />
          </div>
          <div class="col-md-4 mb-3">
            <label asp-for="CodigoPostal" class="form-label"></label>
            <input asp-for="CodigoPostal" class="form-control" />
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <label asp-for="Direccion" class="form-label"></label>
            <input asp-for="Direccion" class="form-control" />
          </div>
          <div class="col-md-3 mb-3">
            <label asp-for="Provincia" class="form-label"></label>
            <input asp-for="Provincia" class="form-control" />
          </div>
          <div class="col-md-3 mb-3">
            <label asp-for="Localidad" class="form-label"></label>
            <input asp-for="Localidad" class="form-control" />
          </div>
        </div>

        <div class="col-md-4 mb-3">
          <label asp-for="IdEspecialidad" class="form-label"></label>
          <select asp-for="IdEspecialidad" asp-items="Model.Especialidades" class="form-select">
            <option value="">-- Seleccione especialidad --</option>
          </select>
          <span asp-validation-for="IdEspecialidad" class="text-danger small"></span>
        </div>

      </div>

      <hr class="my-4" />

      <h6 class="text-uppercase text-muted mb-2">Datos de la empresa</h6>

      <div class="mb-3">
        <label asp-for="NombreEmpresa" class="form-label"></label>
        <input asp-for="NombreEmpresa" class="form-control" />
        <span asp-validation-for="NombreEmpresa" class="text-danger small"></span>
      </div>

      <div class="row">
        <div class="col-md-4 mb-3">
          <label asp-for="Ruc" class="form-label"></label>
          <input asp-for="Ruc" class="form-control" />
          <span asp-validation-for="Ruc" class="text-danger small"></span>
        </div>
        <div class="col-md-4 mb-3">
          <label asp-for="CapacidadMaxima" class="form-label"></label>
          <input asp-for="CapacidadMaxima" class="form-control" />
          <span asp-validation-for="CapacidadMaxima" class="text-danger small"></span>
        </div>
        <div class="col-md-4 mb-3">
          <label asp-for="AreaTotal" class="form-label"></label>
          <input asp-for="AreaTotal" class="form-control" />
          <span asp-validation-for="AreaTotal" class="text-danger small"></span>
        </div>
      </div>

      <div class="mb-3">
        <label asp-for="Ubicacion" class="form-label"></label>
        <input asp-for="Ubicacion" class="form-control" />
        <span asp-validation-for="Ubicacion" class="text-danger small"></span>
      </div>

      <button type="submit" class="btn btn-primary">
        Guardar
      </button>
    </form>
  </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />

<script>
  (function () {
    const passwordCheckbox = document.querySelector("#passwordCheckbox")
    const passwordInput = document.querySelector("#passwordInput")
    if (passwordCheckbox) {
      passwordCheckbox.addEventListener('change', (ev) => {
        const value = passwordInput.getAttribute("readonly")
        if (value) {
          passwordInput.removeAttribute("readonly")
        }
        else {
          passwordInput.setAttribute("readonly", "true")
          passwordInput.value = "No hay cambios"
        }
      })
    }
  })();
</script>
}
