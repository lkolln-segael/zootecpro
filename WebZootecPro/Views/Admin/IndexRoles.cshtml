@model IEnumerable<WebZootecPro.ViewModels.Admin.CrearRolViewModel>

  @{
  ViewData["Title"] = "Roles";
  }

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Roles</h2>

    <!-- Botón Agregar Rol -->
    <a asp-action="CrearRoles" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Agregar Rol
    </a>
  </div>

  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Nombre del Rol</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      @if (Model != null && Model.Any())
      {
      foreach (var rol in Model)
      {
      <tr>
        <td>@rol.Nombre</td>
        <td>
          <a href="/Admin/EditRol/@rol.Id" class="btn btn-warning">
            Editar
          </a>
          <form asp-action="DeleteRol" method="post" asp-route-id="@rol.Id"
            onsubmit="return confirm('¿Eliminar este rol?');">
            <button class="btn btn-sm btn-danger">Eliminar</button>
          </form>
        </td>
      </tr>
      }
      }
      else
      {
      <tr>
        <td class="text-center text-muted">
          No hay roles registrados
        </td>
      </tr>
      }
    </tbody>
  </table>
