@model List<WebZootecPro.ViewModels.Admin.PersonalIndexItemViewModel>
@{
    ViewData["Title"] = "Personal";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Personal (Inspectores / Veterinarios)</h5>
        <a class="btn btn-primary" asp-action="CrearPersonal">Agregar</a>
    </div>

    <div class="card-body">
        @if (Model.Count == 0)
        {
            <div class="alert alert-info mb-0">No hay personal registrado.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Tipo</th>
                            <th>Usuario</th>
                            <th>Nombre</th>
                            <th>DNI</th>
                            <th>Teléfono</th>
                            <th>Acciones</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.Tipo</td>
                                <td>@x.UserName</td>
                                <td>@x.Nombre @x.Apellido</td>
                                <td>@x.DNI</td>
                                <td>@x.Telefono</td>
                                <td class="text-nowrap">
                                    <a class="btn btn-sm btn-outline-secondary"
                                       asp-action="PersonalDetalles" asp-route-id="@x.ColaboradorId">Detalles</a>

                                    <a class="btn btn-sm btn-outline-primary ms-1"
                                       asp-action="EditarPersonal" asp-route-id="@x.ColaboradorId">Editar</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
