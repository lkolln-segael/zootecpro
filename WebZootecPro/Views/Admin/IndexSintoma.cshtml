@model IEnumerable<WebZootecPro.ViewModels.Admin.CrearSintomaViewModel>

  @{
  ViewData["Title"] = "Sintomas";
  }

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Sintomas</h2>

    <!-- Botón Agregar Rol -->
    <a asp-action="CrearSintoma" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Agregar sintoma
    </a>
  </div>

  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Nombre del Sintoma</th>
        <th>Tipo de la enfermedad</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      @if (Model != null && Model.Any())
      {
      foreach (var rol in Model)
      {
      <tr>
        <td>@rol.Nombre</td>
        <td>@ViewBag.IdTipoEnfermedad[@rol.IdEnfermedad]</td>
        <td>
          <form asp-action="DeleteSintoma" method="post" asp-route-id="@rol.Id"
            onsubmit="return confirm('¿Eliminar este síntoma?');">
            <button class="btn btn-danger btn-sm">Eliminar</button>
          </form>
        </td>
      </tr>
      }
      }
      else
      {
      <tr>
        <td class="text-center text-muted">
          No hay sintomas registrados
        </td>
      </tr>
      }
    </tbody>
  </table>
