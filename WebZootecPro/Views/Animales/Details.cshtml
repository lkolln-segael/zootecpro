@model WebZootecPro.ViewModels.Animales.AnimalDetallesViewModel

<h5 class="mb-3">Producción por campaña (por vaca)</h5>

@if (Model.ProduccionPorCampania == null || Model.ProduccionPorCampania.Count == 0)
{
    <div class="alert alert-warning">No hay campañas registradas para este animal (sin PARTO).</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Campaña</th>
                    <th>Inicio</th>
                    <th>Fin</th>
                    <th class="text-end">Producido</th>
                    <th class="text-end">Industria</th>
                    <th class="text-end">Terneros</th>
                    <th class="text-end">Descartada</th>
                    <th class="text-end">Venta directa</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model.ProduccionPorCampania)
                {
                    <tr>
                        <td>@x.Nombre</td>
                        <td>@x.FechaInicio.ToString("dd/MM/yyyy")</td>
                        <td>@(x.FechaFin.HasValue? x.FechaFin.Value.ToString("dd/MM/yyyy") : "ACTIVA")</td>
                        <td class="text-end">@x.Producido.ToString("0.00")</td>
                        <td class="text-end">@x.Industria.ToString("0.00")</td>
                        <td class="text-end">@x.Terneros.ToString("0.00")</td>
                        <td class="text-end">@x.Descartada.ToString("0.00")</td>
                        <td class="text-end">@x.VentaDirecta.ToString("0.00")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
