@model List<WebZootecPro.Data.vw_TratamientosEnfermerium>
@{
    ViewData["Title"] = "Enfermería";
    var soloActivos = (bool)(ViewBag.SoloActivos ?? false);
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Enfermería (días)</h3>

    <a class="btn btn-outline-primary"
       asp-action="Enfermeria"
       asp-route-soloActivos="@(soloActivos ? (int?)null : 1)">
        @(soloActivos ? "Ver todos" : "Solo activos")
    </a>
</div>

<div class="table-responsive">
    <table class="table table-sm table-striped align-middle">
        <thead>
            <tr>
                <th>IdTratamiento</th>
                <th>IdAnimal</th>
                <th>IdEnfermedad</th>
                <th>TipoTratamiento</th>
                <th>Inicio</th>
                <th>Fin</th>
                <th>Días</th>
                <th>Activo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.IdTratamiento</td>
                    <td>@x.IdAnimal</td>
                    <td>@x.idEnfermedad</td>
                    <td>@x.idTipoTratamiento</td>
                    <td>@x.fechaInicio.ToString("yyyy-MM-dd")</td>
                    <td>@(x.fechaFinalEstimada?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>@(x.DiasEnEnfermeria ?? 0)</td>
                    <td>@(x.EstaEnEnfermeria == 1 ? "Sí" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
