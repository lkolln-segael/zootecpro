@model WebZootecPro.Data.Establo
@{
    ViewData["Title"] = "Eliminar establo";
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0 text-danger">Eliminar establo</h5>
    </div>
    <div class="card-body">
        <p>¿Seguro que deseas eliminar este establo?</p>

        <dl class="row mb-4">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.nombre</dd>

            <dt class="col-sm-3">Capacidad máxima</dt>
            <dd class="col-sm-9">@Model.capacidadMaxima</dd>

            <dt class="col-sm-3">Área total (ha)</dt>
            <dd class="col-sm-9">@Model.areaTotal</dd>

            <dt class="col-sm-3">Ubicación</dt>
            <dd class="col-sm-9">@Model.ubicacion</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Sí, eliminar</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>
