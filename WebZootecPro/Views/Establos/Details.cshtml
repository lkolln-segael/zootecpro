@model WebZootecPro.Data.Establo
@{
    ViewData["Title"] = "Detalles del establo";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Detalles del establo</h5>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Volver</a>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.nombre</dd>

            <dt class="col-sm-3">Capacidad máxima</dt>
            <dd class="col-sm-9">@Model.capacidadMaxima</dd>

            <dt class="col-sm-3">Área total (ha)</dt>
            <dd class="col-sm-9">@Model.areaTotal</dd>

            <dt class="col-sm-3">Empresa (id)</dt>
            <dd class="col-sm-9">@Model.EmpresaId</dd>

            <dt class="col-sm-3">Ubicación</dt>
            <dd class="col-sm-9">@Model.ubicacion</dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-primary me-2">Editar</a>
            <a asp-action="Delete" asp-route-id="@Model.Id"
               class="btn btn-outline-danger">Eliminar</a>
        </div>
    </div>
</div>
